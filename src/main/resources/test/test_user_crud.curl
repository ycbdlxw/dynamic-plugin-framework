# 登录获取token
curl -X POST 'http://localhost:8081/api/core/login' -H 'Content-Type: application/json' -d '{"username":"admin","password":"ycbd1234"}'

# 注册新用户
curl -X POST 'http://localhost:8081/api/common/save?targetTable=sys_user' -H 'Content-Type: application/json' -H 'Authorization: Bearer your-token-here' -d '{"username":"testuser","password":"test1234","real_name":"测试用户","email":"test@example.com","status":1}'

# 查询用户列表
curl -X GET 'http://localhost:8081/api/common/list?targetTable=sys_user' -H 'Authorization: Bearer your-token-here'

# 查询指定用户
curl -X GET 'http://localhost:8081/api/common/list?targetTable=sys_user&username=testuser' -H 'Authorization: Bearer your-token-here'

# 更新用户
curl -X POST 'http://localhost:8081/api/common/save?targetTable=sys_user' -H 'Content-Type: application/json' -H 'Authorization: Bearer your-token-here' -d '{"id":2,"real_name":"已更新测试用户","email":"updated@example.com"}'

# 再次查询确认更新
curl -X GET 'http://localhost:8081/api/common/list?targetTable=sys_user&username=testuser' -H 'Authorization: Bearer your-token-here' 